<%= form_for [:admin, @category] do |f| %>
  <div class="box-body">
    <div class="form-group">
      <%= f.label :status, t("name") %><br>
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-newspaper-o style-icon"></i>
        </span>
        <%= f.text_field :name, placeholder: t("name"), class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status, t("parent_name") %><br>
      <%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, {}, class: "form-control" %>
    </div>
    <%= f.submit t("submit"), class: "btn btn-primary button-full" %>
  </div>
<% end %>
