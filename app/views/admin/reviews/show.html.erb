<% provide :title, t("reviews.admin_title_review") %>
<div class="col-sm-12 col-md-12 col-xs-12">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title"><i class="fa fa-exclamation-circle icon_user"></i>
        <%= t "show_review" %>
      </h3>
    </div>
    <div class="box-body table-responsive no-padding">
      <table class="table table-responsive table-hover table-bordered border-user">
        <tr>
          <th><%= t "name" %></th>
          <td><%= @review.user_name %></td>
        </tr>
        <tr>
          <th><%= t "reviews.title" %></th>
          <td><%= @review.title %></td>
        </tr>
        <tr>
          <th><%= t "tours.content" %></th>
          <td><%= @review.content %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
